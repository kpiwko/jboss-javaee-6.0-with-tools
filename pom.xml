        <version.org.apache.maven.surefire.plugin>2.10</version.org.apache.maven.surefire.plugin>
        <version.org.jboss.as.plugins.jboss.as.maven.plugin>7.1.0.CR1b</version.org.jboss.as.plugins.jboss.as.maven.plugin>
